{
  "name": "AHM",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --config cucumber.cjs",
    "test:web": "PLATFORM=web cucumber-js --config cucumber.cjs",
    "test:android": "PLATFORM=mobile MOBILE_OS=android cucumber-js --config cucumber.cjs",
    "test:ios": "PLATFORM=mobile MOBILE_OS=ios cucumber-js --config cucumber.cjs",
    "test:allure": "pnpm test && pnpm allure:generate && pnpm allure:open",
    "test:auth:web": "PLATFORM=web cucumber-js --config cucumber.cjs --tags \"@auth and @web\"",
    "test:auth:web:parallel": "pnpm exec cucumber-js --config cucumber.cjs --tags \"@auth and @web\" --parallel 4",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:auth:web:parallel:allure": "pnpm test:auth:web:parallel && pnpm allure:generate"

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.2",
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "allure-cucumberjs": "^3.4.3",
    "allure-js-commons": "^3.4.3",
    "appium": "^3.1.2",
    "dotenv": "^17.2.3",
    "pino": "^10.1.0",
    "webdriverio": "^9.21.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.4.0",
    "@types/node": "^25.0.3",
    "allure-commandline": "^2.36.0",
    "pino-pretty": "^13.1.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
